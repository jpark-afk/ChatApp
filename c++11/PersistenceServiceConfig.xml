<?xml version="1.0" encoding="ISO-8859-1"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/7.0.0/rti_persistence_service.xsd">
    <!-- ================================================================= -->
    <!-- Persist all data in memory -->
    <!-- ================================================================= -->
    
    <!-- ================================================================= -->
    <!-- Persist all data in disk -->
    <!-- ================================================================= -->
    <persistence_service name="defaultPersistent">
      <!--<persistent_storage>
            <filesystem>
                <directory>disk</directory>
                <file_prefix>Per_</file_prefix>
            </filesystem>
        </persistent_storage>
        -->
        <participant name="PersistenceServicePart">            
            <persistence_group name="persistAll">
                <filter>*</filter>
                <datawriter_qos>
                    <history>
                        <kind>KEEP_LAST_HISTORY_QOS</kind>
                        <depth>5</depth>
                    </history>
                    <reliability>
                        <kind>RELIABLE_RELIABILITY_QOS</kind>
                    </reliability>
                    <ownership>
                      <kind>EXCLUSIVE_OWNERSHIP_QOS</kind>
                    </ownership>
                </datawriter_qos>
                <datareader_qos>
                    <history>
                        <kind>KEEP_LAST_HISTORY_QOS</kind>
                        <depth>5</depth>
                    </history>
                    <reliability>
                        <kind>RELIABLE_RELIABILITY_QOS</kind>
                    </reliability>                    
                    <ownership>
                      <kind>EXCLUSIVE_OWNERSHIP_QOS</kind>
                    </ownership>               
                </datareader_qos>
            </persistence_group>
            <domain_participant_qos>
                <transport_builtin>
                    <mask>UDPv4</mask>
                </transport_builtin>
                <discovery>
                    <initial_peers>
                        <element>localhost</element>
                    </initial_peers>
                </discovery>
            </domain_participant_qos>
        </participant>
    </persistence_service>
</dds>